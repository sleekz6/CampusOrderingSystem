@model MenuItem

<h2>Create New Menu Item</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ItemName"></label>
        <input asp-for="ItemName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label for="RestaurantId">Restaurant</label>
        <select asp-for="RestaurantId" class="form-control" asp-items="@ViewBag.Restaurants"></select>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Calories"></label>
        <input asp-for="Calories" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Size"></label>
        <input asp-for="Size" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>