@model List<MenuItem>

<h2>Delete Menu Item</h2>

<p>Select a menu item to delete:</p>
<form asp-action="DeleteConfirmed" asp-controller="MenuItem" method="post">
    <div class="form-group">
        <label for="menuItemId">Menu Item:</label>
        <select name="menuItemId" class="form-control">
            @foreach (var menuItem in Model)
            {
                <option value="@menuItem.Id">@menuItem.ItemName</option>
            }
        </select>
    </div>

    <input type="hidden" name="restID" value="@ViewBag.RestaurantId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Menu" asp-controller="MenuItem" asp-route-restID="@ViewBag.RestaurantId" class="btn btn-secondary">Cancel</a>
</form>