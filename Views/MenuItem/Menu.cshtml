@model Restaurant
<head>
    <link rel="stylesheet" href="../css/menu.css" />
</head>

<div class="center-content">
    <h2>Menu for @Model.Name</h2>

     <div class="row">
        @foreach (var menuItem in Model.Menu)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@menuItem.ImageUrl" class="card-img-top" alt="@menuItem.ItemName">
                    <div class="card-body">
                        <h5 class="card-title">@menuItem.ItemName</h5>
                        <p class="card-text">Calories: @menuItem.Calories</p>
                        <p class="card-text">Price: $@menuItem.Price</p>
                        <p class="card-text">Size: @menuItem.Size</p>
                        <button type="button" class="btn btn-primary" onclick="showItemDetails(@menuItem.Id)">Details</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Modal -->
    <div class="modal fade" id="itemDetailsModal" tabindex="-1" role="dialog" aria-labelledby="itemDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="itemDetailsModalLabel">Item Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="itemDetailsBody">
                    <!-- Content will be dynamically added here using JavaScript -->
                </div>
                <div class="modal-footer">
                    <button id="addToCartBtn" class="btn btn-primary">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</div>

</div>

<!-- Include jQuery and Bootstrap JavaScript -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    var $ = jQuery.noConflict();
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // JavaScript to handle the click event and populate modal content
        var name = "";
        var calories = 0;
        var price = 0.0;
        var size = "";
        var newPrice = 0.0;
        var newCal = 0;
        var cart = [];
        var menuItemId = 0;

        function showItemDetails(itemId) {
        // Get item details using AJAX or pass itemId to the modal and populate content dynamically
        // For simplicity, I'm just showing an empty modal body
        $('#itemDetailsBody').html('');
        $('#itemDetailsModal').modal('show');
    }

    $('#addToCartBtn').on('click', function () {
        // Add item to cart logic here
        // For simplicity, I'm not implementing this functionality in this example
        $('#itemDetailsModal').modal('hide');
    
    $(document).ready(function () {
        $('.menu-item-image').on('click', function () {
            name = $(this).data('name');
            calories = $(this).data('calories');
            newCal = calories;
            price = parseFloat($(this).data('price'));
            newPrice = price;
            size = $(this).data('size');
            menuItemId = $(this).data('id');

            // Update modal content dynamically
            updateModalContent();

            // Show the modal
            $('#itemDetailsModal').modal('show');
        });

        $('#addToCartBtn').on('click', function () {
            var menuItemId = $(this).data('id');
            var menuItemName = $(this).data('name');

            var cartItem = {
                MenuItemId:menuItemId,
                MenuItemName: name,
                Price: newPrice,
                Size: size,
                Quantity: 1
            };

            $.post('@Url.Action("AddToCart", "Cart")', cartItem, function (data) {
                console.log(data);
            });

            cart.push(cartItem);

            $('#itemDetailsModal').modal('hide');
        });
    });

    function updateModalContent() {
        $('#itemDetailsBody').html(`
                <p><strong>${name}</strong></p>
                <p>Calories: ${newCal}</p>
                <p>Price: $${newPrice.toFixed(2)}</p>
                <p>Size: ${size}</p>
            `);
    }

    function changeSize(newSize) {
        var baseCal = calories;
        var medCal = baseCal * 1.2;
        var largeCal = baseCal * 1.4;
        var basePrice = price;
        var medPrice = basePrice * 1.2;
        var largePrice = basePrice * 1.4;
        if (newSize === 'small') {
            newPrice = basePrice;
            newCal = baseCal;
        } else if (newSize === 'medium') {
            newPrice = medPrice;
            newCal = medCal;
        } else if (newSize === 'large') {
            newPrice = largePrice; 
            newCal = largeCal;
        }

        // Update current size
        size = newSize;

        // Update modal content dynamically
        updateModalContent();
    }

</script>
