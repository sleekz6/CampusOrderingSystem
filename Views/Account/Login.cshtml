@using CampusOrdering.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px; /* Adjusted margin-top for spacing */
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #28a745; /* Update color to match register page */
            color: #fff;
            text-align: center;
            font-size: 24px;
            padding: 20px 0;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 30px;
        }

        .form-group label {
            font-weight: bold;
            margin-bottom: 20px; /* Increased margin-bottom for more spacing */
        }

        .form-control {
            border-radius: 20px;
        }

        .btn-success {
            border-radius: 20px;
        }

        .btn-cancel {
            border-radius: 20px;
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Log in to your account</div>
                    <div class="card-body">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <b>Sorry!</b> - @TempData["Error"]
                            </div>
                        }

                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="EmailAddress" style="margin-bottom: 10px;">Email Address</label>
                                <input asp-for="EmailAddress" class="form-control" placeholder="Enter your email">
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" style="margin-bottom: 10px;">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-success btn-block">Log in</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-cancel btn-block">Cancel</a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
