@model List<CartItem>

<h2>Your Shopping Cart</h2>

<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MenuItemName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>
</div>

<div>
    <a class="btn btn-primary" href="@Url.Action("Checkout", "Cart")">Checkout</a>
</div>