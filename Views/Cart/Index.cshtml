@model List<CartItem>

<link rel="stylesheet" href="style.css">
  @if (Model.Count > 0)
    {
<h2>Your Shopping Cart</h2>

<div class="table-responsive">
<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MenuItemName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>
</div>


  
        <p>Estimated Order Time: @ViewBag.OrderEstimate</p>
        <a class="btn btn-primary" href="@Url.Action("Checkout", "Cart")">Checkout</a>
    }
    else{
    <div class="center-content">
        <link rel="stylesheet" href="style.css">
        @Html.ActionLink("Cart is Empty!", "ChooseRestaurant", "Restaurant", null, new { @class = "btn btn-primary" })
    </div>

    <head>
        <link rel="stylesheet" href="~/css/menu.css" />
    </head>
    }
