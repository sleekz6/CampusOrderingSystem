@model IEnumerable<AppUser>

<style>
    .giphy-container {
        position: relative;
        width: 100%;
        margin-top: -20px; /* Adjust margin-top to bring the GIF closer to the table */
    }

    .giphy-embed {
        width: 480px;
        height: 300px;
        border: 0;
        margin: 0 auto;
        pointer-events: none;
    }
</style>

<div class="giphy-container">
    <iframe src="https://giphy.com/embed/H2sKnWQMIwUmSHzYzo" class="giphy-embed" allowFullScreen></iframe>
</div>

<div class="p-4 border rounded" style="margin-top: -20px;">
    <!-- Adjust margin-top to bring the table closer to the GIF -->
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Email
                </th>
                <th>
                    Nickname
                </th>
                <th>
                    Roles
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.Role
                    </td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-userId="@item.Id">

                                <a class="btn btn-info text-white" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">
                                    Edit
                                </a>

                                <a asp-action="ManageClaims" asp-route-userId="@item.Id" class="btn btn-primary text-white">Detail</a>

                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                class="btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>
